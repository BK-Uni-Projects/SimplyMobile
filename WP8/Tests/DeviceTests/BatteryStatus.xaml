<UserControl x:Class="DeviceTests.BatteryStatus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" Height="137.434" Width="309.733">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <TextBlock x:Name="batteryLevel" HorizontalAlignment="Left" Margin="184,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="92"/>
        <CheckBox x:Name="chargerStatus" Content="Charger connected" HorizontalAlignment="Left" Margin="25,61,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,10,0,0" TextWrapping="Wrap" Text="Charging %" VerticalAlignment="Top" RenderTransformOrigin="0.058,0.552"/>

    </Grid>
</UserControl>